.recordItem {
  margin: 3vw;
  background-color: white;
  padding-bottom: 20rpx;
  border-radius: 8px;
}
.item-title{
  display: flex;
  align-items: center;
  padding:20rpx; 
  border-bottom: 1px solid #eee; 
}
.item-title view{
  margin-left: 20rpx;
}
.item-title image{
  width: 60rpx;
  height:60rpx;
}
.item-title text{
  color: #777;
  width: 75%;
  text-align: right;
}
.item-button{
  display: flex;
  justify-content: flex-end;
}
.item-button view{
  width:150rpx;
  margin-right:4vw; 
  padding:10rpx 20rpx 10rpx 20rpx;
  color: #555;
  border-radius:7px;
  border: 1px solid #aaa;
}
.item-main{
  padding:30rpx 0 30rpx 60rpx;
  color: #999; 
}
.item-main view{
  height: 60rpx;
  line-height: 60rpx;
}.jy-mian{
  margin-top:20vw; 
}
.jy-mian image{
  display: block;
  width: 170rpx;
  height: 170rpx;
  margin: 0 auto;
}
.jy-mian view{
  margin-top: 20rpx;
  text-align: center;
  color: #aaa;
}
.button-right{
  text-align: center
